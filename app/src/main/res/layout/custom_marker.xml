<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_marker_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/custom_marker_background"
        android:layout_width="265dp"
        android:layout_height="74dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="1.8dp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custom_marker_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfui_display_regular"
                android:textColor="#404040"
                android:textSize="12sp"
                android:text="asdfasdfasdf" />

            <TextView
                android:id="@+id/custom_marker_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfui_display_regular"
                android:textColor="#404040"
                android:textSize="12sp"
                android:text="asdfasdfasdf" />

            <TextView
                android:id="@+id/custom_marker_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfui_display_regular"
                android:textColor="#404040"
                android:textSize="12sp"
                android:text="asdfasdfasdf" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>